{
    "name": "openpackage",
    "version": [1,0,0],
    "authors": [
        "Ethan Manzi"
    ],
    "description": "The offical Open Package Manager",
    "keywords": ["opkg", "oclidiamond"],
    
    "dependencies": {
        "heyjson": "any",
        "packager": "any",
        "zipper": "any",
        "tarpit": "any",
        "arguify": "any",
        "better-primitives": "any",
        "openlogger": "any",
        "openoxygen": "any"
    },

    "jobs": {
        "uninstall": {
            "files": {
                "lib/*": "/lib/",
                "bin/*": "/bin/",
                "man/*": "/usr/man"
            },
            "scripts": {
                "pre": [],
                "post": []
            }
        },
        "update": {
            "files": {
                "lib/*": "/lib/",
                "bin/*": "/bin/",
                "man/*": "/usr/man"
            },
            "scripts": {
                "pre": [],
                "post": []
            }
        }
    }
}